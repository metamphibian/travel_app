<p id="notice"><%= notice %></p>

<h1>Destinations</h1>

<%= link_to 'New Destination', new_destination_path, class: "btn btn-warning" %>

<ul class="nav nav-pills" role="tablist">

  <li><%= link_to "All Destinations", destinations_path %></li>

  <% @my_countries.each do |c| %>

  <li><%= link_to c.country, destinations_path(country: c.country) %></li>

<!--   <li><%= link_to "New Zealand", destinations_path(country: "new_zealand") %></li>
<li><%= link_to "Sri Lanka", destinations_path(country: "sri_lanka") %></li> -->

  <% end %>
</ul>

<div class="row">
    <% @destinations.each do |destination| %>
      <div class="col-md-4">
        <div class="well">
          <p><%= "#{destination.city}, #{destination.country}" %></p>   
          <p><%= destination.description %></p>
          <p>
            <%= link_to 'Show', destination, class: "btn btn-primary" %>
            <%= link_to 'Edit', edit_destination_path(destination), class: "btn btn-info" %>
            <%= link_to 'Destroy', destination, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %>
          </p>
        </div>
      </div>
    <% end %>
  </div>



